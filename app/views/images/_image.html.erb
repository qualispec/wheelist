<div class="image-tile">
  <!-- <div class="image-frame -->
    <%# if image.car_tags.first.car_color %>
      <%#= image.car_tags.first.car_color.color.downcase %>
    <%# else %>
      <%#= "white" %>
    <!-- <%# end %> "> -->
    <div class="image-thumbnail">
  		<%= link_to(image_tag(image.url), image_path(image)) %>
<!--       <div class="test"></div> -->
  	</div>
  <!-- </div> -->

	<div class="image-footer
    <% if image.wheel_tags.first.wheel_color %>
      <%= image.wheel_tags.first.wheel_color.color.downcase %>
    <% else %>
      <%= "white" %>
    <% end %> ">

		<div class="image-description">
      <h3>
				  <%= image.car_tags.first.car_model.car_mfg.mfg if image.car_tags.first.car_model %>
				  <%= image.car_tags.first.car_model.model if image.car_tags.first.car_model %>
          on
          <%= image.wheel_tags.first.wheel_model.wheel_mfg.mfg if image.wheel_tags.first.wheel_model %>
          <%= image.wheel_tags.first.wheel_model.model if image.wheel_tags.first.wheel_model %>
      </h3>
		</div>
		<div class="image-post-info">
      <p>
        posted
        <% unless image.user.nil? %>
          by <strong><%= image.user.user_name %></strong>
        <% end %>
        <em><%= time_ago_in_words(image.created_at) %> ago</em>
      </p>
    </div>
    <div class="image-like-comment">
      <div class="like-count">
        <%= image.image_likes_count %> likes
      </div>

      <div class="comment-count">
        <%= image.comments_count %> comments
      </div>
    </div>
	</div>

  <div class="like-box">
    <span class="like-button <%= "liked" if current_user && image.image_likes.where(:user_id => current_user.id).present? %>">

      <% if current_user %>
        <%= link_to raw("<i class=\"icon-wrench icon-white\"></i> Unlike"),
          unlike_image_path(image),
          id: "unlike_image_#{image.id}",
          class: 'unlike-btn btn btn-danger btn-small',
          remote: true,
          method: :delete %>

        <%= link_to raw("<i class=\"icon-wrench icon-white\"></i> Like"),
          like_image_path(image),
          id: "like_image_#{image.id}",
          class: 'like-btn btn btn-primary btn-small',
          remote: true,
          method: :post %>

      <% else %>
        <%= link_to raw("<i class=\"icon-wrench icon-white\"></i> Like"),
          new_user_session_path,
          id: "like_image_#{image.id}",
          class: 'btn btn-primary btn-small' %>
      <% end %>
    </span>

    <%= link_to("Comment", image_path(image),
                class: "comment-button btn btn-primary btn-small") %>
  </div>
</div>