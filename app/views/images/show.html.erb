<% unless @image.car_tags.empty? %>
	<h2><%= @image.car_tags.first.car_model.car_mfg.mfg %>
			<%= @image.car_tags.first.car_model.model %><br>
			<%= @image.car_tags.first.car_color.color %><br>
      <%= @image.caption %>
	</h2>
<% end %>

<%= image_tag(@image.url) %>

<div class="comments-container">
  <div class="existing-comments">
    <%= render @comments %>
  </div>

    <%= simple_form_for(@comment, :remote => true, html: { id: 'comment-form', 
      class: 'form-horizontal' }) do |f| %>
      <%= f.hidden_field :image_id, :value => @image.id %>
      
      <%= f.input :body %>

      <%= f.submit "Comment", class: "btn btn-primary btn-small" %>
    <% end %>

</div>

<script>

  $(function() {

    $('#comment-form').on('ajax:success', function(event, data) {
      $('.existing-comments').html(data);
      $('#comment-body').empty();
    });




  });

</script>